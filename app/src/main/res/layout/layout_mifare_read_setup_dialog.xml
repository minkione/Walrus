<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <!--suppress AndroidUnknownAttribute -->
    <data class="MifareReadSetupDialogBinding">

        <variable name="viewModel"
                  type="com.bugfuzz.android.projectwalrus.card.carddata.ui.MifareReadSetupDialogViewModel"/>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:labelFor="@id/read_attempts"
            android:text="@string/read_attempts"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/read_attempts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:onClick="@{() -> viewModel.onAddReadAttemptClick()}"
            android:text="@string/add"/>

    </LinearLayout>

</layout>