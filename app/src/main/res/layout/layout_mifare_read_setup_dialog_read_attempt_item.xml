<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools">

    <!--suppress AndroidUnknownAttribute -->
    <data class="MifareReadSetupDialogReadAttemptItemBinding">

        <variable name="readAttemptItem"
                  type="com.bugfuzz.android.projectwalrus.card.carddata.ui.MifareReadSetupDialogViewModel.ReadAttemptItem"/>

        <variable name="dialogViewModel"
                  type="com.bugfuzz.android.projectwalrus.card.carddata.ui.MifareReadSetupDialogViewModel"/>


    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white">

        <FrameLayout
            android:id="@+id/readAttempt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:onClick="@{() -> dialogViewModel.onReadAttemptItemClick(readAttemptItem)}"/>

        <ImageView
            android:id="@+id/reorder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:src="@drawable/ic_reorder_black_24px"
            tools:ignore="ContentDescription"/>

    </FrameLayout>

</layout>

